<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_activite_histo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/TexteTitreH3"
        app:layout_constraintEnd_toStartOf="@+id/bt_rejouer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_histo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="@font/noto_sans"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="@dimen/TexteNormal"
        app:layout_constraintEnd_toEndOf="@+id/tv_activite_histo"
        app:layout_constraintStart_toStartOf="@+id/tv_activite_histo"
        app:layout_constraintTop_toBottomOf="@+id/tv_activite_histo" />

    <Button
        android:id="@+id/bt_rejouer"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="@font/noto_sans"
        android:text="@string/rejouer"
        android:textSize="@dimen/TexteNormal"
        app:layout_constraintBottom_toBottomOf="@id/tv_date_histo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_activite_histo" />

</androidx.constraintlayout.widget.ConstraintLayout>